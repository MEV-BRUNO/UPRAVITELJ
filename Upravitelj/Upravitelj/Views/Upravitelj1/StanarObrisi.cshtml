@model Upravitelj.Models.Stanar

@{
    Layout = null;
}
<script src="@Url.Content("~/Scripts/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje podatka</h4>
        </div>
        @using (Ajax.BeginForm("Obrisi", "Home", new { id = Model.id }, new AjaxOptions
        {
            HttpMethod = "Post",
            OnSuccess = "BrisanjeUspjesno"

        }, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.HiddenFor(model => model.id_stanar)
                    <div class="form-group">
                        @Html.Display("Id_Stanar:", new { htmlAttributes = new { @class = "form-control" } })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.id_stanar, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Display("Ime:", new { htmlAttributes = new { @class = "form-control" } })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.Ime_prezime, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Display("Vrsta:", new { htmlAttributes = new { @class = "form-control" } })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.vrsta_korisnika, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Display("Mob:", new { htmlAttributes = new { @class = "form-control" } })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.mob, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Display("Mail:", new { htmlAttributes = new { @class = "form-control" } })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Display("Lozinka:", new { htmlAttributes = new { @class = "form-control" } })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.lozinka, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Display("Link:", new { htmlAttributes = new { @class = "form-control" } })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.aktivacijski_link, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Display("Aktivnost:", new { htmlAttributes = new { @class = "form-control" } })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.aktivan, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <h4>Da li želite obrisati podatak?</h4>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-primary" value="Potvrdi" />
                                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

