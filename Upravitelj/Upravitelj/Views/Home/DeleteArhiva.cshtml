@model Upravitelj.Models.Arhiva

@{
    Layout = null;
}
<script src="@Url.Content("~/Scripts/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje podatka</h4>
        </div>
        @using (Ajax.BeginForm("Delete", "Home",new {id_arhiva=Model.id}, new AjaxOptions
        {
            HttpMethod = "Post",
            OnSuccess = "DeleteSuccess"

        }, new { @class = "form-horizontal", role = "form" }))
        {
        <div class="modal-body">
            <div class="form-horizontal">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.id_arhiva)
                <div class="form-group">
                    @Html.Display("Arhiva:", new { htmlAttributes = new { @class = "form-control" } })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.naziv, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Display("Arhiva:", new { htmlAttributes = new { @class = "form-control" } })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.datoteka, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <h4>Da li želite obrisati podatke?</h4>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-primary" value="Potvrdi" />
                            <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

}
                        </div>
</div>






