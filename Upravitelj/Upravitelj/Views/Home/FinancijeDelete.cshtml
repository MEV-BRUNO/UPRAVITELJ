@model Upravitelj.Models.Financije

@{
    Layout = null;
}
<script src="@Url.Content("~/Scripts/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Brisanje podatka</h4>
        </div>
        @using (Ajax.BeginForm("Obrisi", "Home", new { id = Model.id }, new AjaxOptions
        {
            HttpMethod = "Post",
            OnSuccess = "BrisanjeUspjesno"

        }, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.HiddenFor(model => model.id_stanar)
                    <div class="form-group">
                        @Html.Display("Id_Financije:", new { htmlAttributes = new { @class = "form-control" } })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.id_financije, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Display("Zgrada:", new { htmlAttributes = new { @class = "form-control" } })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.zgrada, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Display("Datum:", new { htmlAttributes = new { @class = "form-control" } })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.datum, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Display("Stanje:", new { htmlAttributes = new { @class = "form-control" } })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.stanje, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <h4>Želite li obrisat ovaja podatak?</h4>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-primary" value="Potvrdi" />
                                <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
