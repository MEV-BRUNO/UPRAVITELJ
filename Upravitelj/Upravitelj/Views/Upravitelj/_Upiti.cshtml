@model PagedList.IPagedList<Upravitelj.Models.Upiti>

    <table class="table" id="dataTables-example">
        <tr>
            <th>
                @Html.ActionLink("naslov", "UpitiView", new { Sorting_Order = ViewBag.SortingName, Filter_Value = ViewBag.FilterValue })
            </th>
            <th>
                Opis
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.naslov)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.opis)
            </td>
            <td>
                <a href="#" data-toggle="modal" data-url="@Url.Action(" Edit","Home",new { id=item.id })" id="editAsset" class="btn btn-info btn-xs ">Uredi</a>
                <a href="#" data-toggle="modal" data-url="@Url.Action(" Delete","Home",new { id=item.id })" id="deleteAsset" class="btn btn-info btn-xs ">Briši</a>
            </td>
        </tr>
        }

    </table>


