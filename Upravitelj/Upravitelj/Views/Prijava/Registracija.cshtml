@using Upravitelj.Models
@model Upravitelj.Models.RegistracijaViewModel


@{
	ViewBag.Title = "Registracija - ";
}

&emsp;&emsp;

<div>
    @using (Html.BeginForm("Registracija", "Prijava", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    @Html.AntiForgeryToken()
    <div class="bg-primary rounded form-group text-white" style="height: 45px; padding:10px; width: 25%;"><p style="text-align:center;">Ispunite podatke za registraciju</p> </div>
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.TextBoxFor(Model => Model.Ime, new { @Value = "Ime", @class = "form-control", @onclick = "this.value =''" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(Model => Model.Prezime, new { @Value = "Prezime", @class = "form-control", @onclick = "this.value =''" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(Model => Model.UserName, new { @Value = "Korisničko Ime", @class = "form-control", @onclick = "this.value =''" })
    </div>
    <div class="form-group">

        @Html.TextBoxFor(Model => Model.Email, new { @Value = "Vaša E-mail adresa", @class = "form-control", @onclick = "this.value =''" })

    </div>
    <div class="form-group">
        @Html.PasswordFor(Model => Model.Password, new { @Value = "Lozinka", @class = "form-control", @onclick = "this.value =''" })

    </div>
    <div class="form-group">

        @Html.PasswordFor(Model => Model.ConfirmPassword, new { @Value = "Ponovite lozinku", @class = "form-control", @onclick = "this.value =''" })

    </div>

    <div class="form-group">
        <div>
            <input type="submit" value="Registracija" class="btn btn-success" />
        </div>
    </div>
    <div class="moje">
        <div>
            @Html.ActionLink("Prijava", "Login", "Prijava", new { @Style = "color: black;", @class = "mojilink;" })
            &emsp;

            @Html.ActionLink("Zaboravljena lozinka", "ZaboravljenaLozinka", "Prijava", new { @Style = "color: black;", @class = "mojilink;" })

            &emsp;
            @Html.ActionLink("Registracija", "Registracija", "Prijava", new { @Style = "color: black;", @class = "mojilink;" })
        </div>
    </div>
    }

</div>

	@section Scripts {
		@Scripts.Render("~/boundles/jqueryval")
	}
