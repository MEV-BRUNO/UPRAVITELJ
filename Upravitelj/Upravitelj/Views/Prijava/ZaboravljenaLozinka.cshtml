@using Upravitelj.Models
@model Upravitelj.Models.ZaboravljenaLozinkaViewModel
@{
	ViewBag.Title = "Zaboravljena lozinka - ";
}

&emsp;&emsp;

<div>
    @using (Html.BeginForm("ZaboravljenaLozinka", "Prijava", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    @Html.AntiForgeryToken()
    <div class="bg-primary rounded form-group text-white" style="height: 45px; padding:10px; width: 25%;"><p style="text-align:center;">Upiši vašu valjanu e-mail adresu</p> </div>
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.TextBoxFor(Model => Model.Email, new { @Value = "Vaša E-mail adresa", @class = "form-control", @onclick = "this.value =''" })
    </div>
    <div class="form-group">
        <div>
            <input type="submit" value="Obnova lozinke" class="btn btn-success" />
        </div>
    </div>
    <div>
        @Html.ActionLink("Prijava", "Login", "Prijava", new { @Style = "color: black;", @class = "mojilink;" })
        &emsp;

        @Html.ActionLink("Zaboravljena lozinka", "ZaboravljenaLozinka", "Prijava", new { @Style = "color: black;", @class = "mojilink;" })

        &emsp;
        @Html.ActionLink("Registracija", "Registracija", "Prijava", new { @Style = "color: black;", @class = "mojilink;" })
    </div>
    }

</div>